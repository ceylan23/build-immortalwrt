# ==========================================
# 1. 目标机型设置 (Target)
# 注意：ImmortalWrt 官方源码通常使用 meson8b
# ==========================================
CONFIG_TARGET_meson8b=y
CONFIG_TARGET_meson8b_meson8b=y
CONFIG_TARGET_meson8b_meson8b_DEVICE_thunder-onecloud=y

# 固件生成设置
CONFIG_TARGET_ROOTFS_TARGZ=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
# 强制使用 EXT4 文件系统 (玩客云 eMMC 必需)
CONFIG_USES_EXT4=y
CONFIG_USES_SQUASHFS=y

# ==========================================
# 2. USB 网络共享 (RNDIS/NCM/iOS)
# ==========================================
# 基础 USB 支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb-uhci=y

# 安卓/4G网卡 (RNDIS, CDC-NCM)
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ncm=y
CONFIG_PACKAGE_kmod-usb-net-huawei-cdc-ncm=y

# 苹果手机 (iOS Tethering)
CONFIG_PACKAGE_kmod-usb-net-ipheth=y
CONFIG_PACKAGE_usbmuxd=y
CONFIG_PACKAGE_libimobiledevice=y
CONFIG_PACKAGE_usbutils=y

# ==========================================
# 3. Python 环境 (你的量化脚本刚需)
# ==========================================
CONFIG_PACKAGE_python3=y
CONFIG_PACKAGE_python3-base=y
CONFIG_PACKAGE_python3-pip=y
CONFIG_PACKAGE_python3-light=y
# 有了这个，刷机后直接 pip install requests 就能跑脚本

# ==========================================
# 4. 网络加速 (S805 必选)
# ==========================================
# TurboACC 软件流量分载 (降低 CPU 占用)
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_SHORTCUT_FE=y
# BBR 拥塞控制
CONFIG_PACKAGE_kmod-tcp-bbr=y

# ==========================================
# 5. 文件系统与挂载 (挂U盘用)
# ==========================================
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_automount=y

# ==========================================
# 6. 常用工具
# ==========================================
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_screen=y

# ==========================================
# 7. LuCI 界面与主题
# ==========================================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y
CONFIG_PACKAGE_luci-theme-argon=y

# ==========================================
# 8. 其他插件 (可选)
# ==========================================
# UPnP (玩游戏自动端口映射)
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
# 定时重启
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-i18n-autoreboot-zh-cn=y

# ==========================================
# 9. 移除 Docker (S805 跑 Docker 太累，建议用 Python 直接跑)
# ==========================================
# CONFIG_PACKAGE_docker is not set
# CONFIG_PACKAGE_luci-app-dockerman is not set

